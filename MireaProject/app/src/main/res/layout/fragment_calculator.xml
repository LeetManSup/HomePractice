<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66BB6A"
    tools:context=".ui.calculator.CalculatorFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum7"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="."
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDel"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="DEL"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum8"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum0"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="0"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum9"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonNum000"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="000"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="+"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="ร"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="รท"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="2dp"
                android:text="="
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>